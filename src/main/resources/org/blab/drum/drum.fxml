<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <HBox fillHeight="false">
        <AnchorPane HBox.hgrow="ALWAYS">
            <Label fx:id="serverStatusLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Disconnected"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <graphic>
                    <Circle fx:id="serverStatusIndicator" fill="#A41623" radius="10.0" stroke="BLACK"
                            strokeType="INSIDE"/>
                </graphic>
                <padding>
                    <Insets bottom="5.0" right="5.0" top="10.0"/>
                </padding>
            </Label>
        </AnchorPane>
    </HBox>
    <AnchorPane VBox.vgrow="ALWAYS">
        <GridPane fx:id="groupsGrid" alignment="CENTER" gridLinesVisible="true" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        </GridPane>
    </AnchorPane>
</VBox>
